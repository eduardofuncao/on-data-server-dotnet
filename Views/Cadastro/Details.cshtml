@model OnData.Models.PacienteOcorrenciaViewModel

@{
    ViewData["Title"] = "Detalhes do Paciente";
}

<div class="container">
    <h2>Detalhes do Paciente</h2>

    <div class="card">
        <div class="card-body">
            <h3>Paciente</h3>
            <p><strong>Nome:</strong> @Model.Paciente.Nome</p>
            <p><strong>CPF:</strong> @Model.Paciente.Cpf</p>
            <p><strong>Email:</strong> @Model.Paciente.Email</p>
            <p><strong>Telefone:</strong> @Model.Paciente.Telefone</p>
            <p><strong>Endereço:</strong> @Model.Paciente.Endereco</p>

            @if (Model.Ocorrencia != null)
            {
                <h3>Ocorrência</h3>
                <p><strong>Data:</strong> @Model.Ocorrencia.Data?.ToShortDateString()</p>
                <p><strong>Valor:</strong> @Model.Ocorrencia.Valor</p>
                <p><strong>Aprovado:</strong> @(Model.Ocorrencia.Aprovado == true ? "Sim" : "Não")</p>
            }
        </div>
    </div>

    <div class="mt-3">
        <a href="@Url.Action("Index", "Cadastro")" class="btn btn-secondary">Voltar à Lista</a>
    </div>
</div>