@model IEnumerable<OnData.Models.Paciente>

@{
ViewData["Title"] = "Lista de Pacientes";
}

<div class="container">
    <h2 class="my-4">Lista de Pacientes e Ocorrências</h2>

    @if (!Model.Any())
    {
    <div class="alert alert-info">Nenhum paciente cadastrado.</div>
    }
    else
    {
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="thead-dark">
            <tr>
                <th>Nome</th>
                <th>CPF</th>
                <th>Email</th>
                <th>Telefone</th>
                <th>Endereço</th>
                <th>Ações</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var paciente in Model)
            {
            <tr>
                <td>@paciente.Nome</td>
                <td>@paciente.Cpf</td>
                <td>@paciente.Email</td>
                <td>@paciente.Telefone</td>
                <td>@paciente.Endereco</td>
                <td class="action-links">
                    <a href="@Url.Action("Edit", "Cadastro", new { id = paciente.Id })" class="btn btn-sm btn-warning">Editar</a>
                    <a href="@Url.Action("Details", "Cadastro", new { id = paciente.Id })" class="btn btn-sm btn-info">Detalhes</a>
                    <a href="@Url.Action("Delete", "Cadastro", new { id = paciente.Id })" class="btn btn-sm btn-danger">Excluir</a>
                </td>
            </tr>
            }
            </tbody>
        </table>
    </div>
    }
</div>